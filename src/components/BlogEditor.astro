---
import Quill from '@components/Quill';
import Layout from '@layouts/Layout.astro';
import { db } from '@lib/db';
import { blogTable } from '@lib/db/schema';
import { eq, and } from 'drizzle-orm/sqlite-core/expressions';

const userId = 'a';

interface Props {
  id: 'new' | number;
}

const { id } = Astro.props;

let blog;

if (id != 'new') {
  const blogs = await db
    .select({
      id: blogTable.id,
      title: blogTable.title,
      content: blogTable.content,
      description: blogTable.description,
      image: blogTable.image,
    })
    .from(blogTable)
    .where(and(eq(blogTable.id, id), eq(blogTable.authorId, userId)));

  if (!blogs.length) return Astro.redirect('/blogs');

  blog = blogs[0];
}
---

<Layout title="Create Recipe">
  <form class="flex flex-col gap-4 mx-auto max-w-[500px] p-4 bg-gray-800 shadow-lg rounded-lg" enctype="multipart/form-data" id="blog-form">
    <h3 class="text-2xl font-bold mb-4 text-white">Create Recipe</h3>
    
    <label class="flex flex-col gap-2">
      <span class="text-lg font-semibold text-gray-300">Title</span>
      <input type="text" name="title" required class="w-full p-2 border border-gray-600 rounded-md bg-gray-700 text-white" value={blog?.title} aria-label="Title" />
    </label>

    <label class="flex flex-col gap-2">
      <span class="text-lg font-semibold text-gray-300">Description</span>
      <textarea name="description" class="w-full p-2 border border-gray-600 rounded-md bg-gray-700 text-white" aria-label="Description">{blog?.description}</textarea>
    </label>

    <label class="flex flex-col gap-2">
      <span class="text-lg font-semibold text-gray-300">Content</span>
      <Quill client:only="react" initialValue={blog?.content} name="content" />
    </label>

    <label class="flex flex-col gap-2">
      <span class="text-lg font-semibold text-gray-300">Image</span>
      <input type="file" class="w-full p-2 border border-gray-600 rounded-md bg-gray-700 text-white" name="image" required aria-label="Image" />
    </label>

    <input type="text" name="authorId" hidden value={userId} />
    
    <button class="w-full p-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition duration-300">Submit</button>
  </form>
</Layout>

<style is:global>
  /* Global Styles */
  .ql-container {
    @apply min-h-40;
    background: #2d2d2d;
    color: #ffffff;
  }

  input, textarea {
    color: white;
  }

  /* Improved Styles */
  form {
    background: #1f2937;
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  h3 {
    margin-bottom: 1.5rem;
  }

  label {
    margin-bottom: 1rem;
  }

  input, textarea {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #4b5563;
    border-radius: 4px;
    font-size: 1rem;
    background-color: #374151;
  }

  button {
    margin-top: 1rem;
  }

  /* Responsive Styles */
  @media (max-width: 640px) {
    form {
      padding: 1rem;
    }

    input, textarea {
      font-size: 0.875rem;
    }

    button {
      font-size: 0.875rem;
    }
  }
</style>
