---
type Props = {
  blog: {
    id: number;
    title: string;
    content: string;
    description: string;
    createdAt: string;
    authorName: string;
    image: string;
    authorId: number;
  };
};

const { blog }: Props = Astro.props;
---

<article
  class="relative border item border-gray-700 bg-gray-800 p-4 outline-gray-700 transition-transform duration-300 ease-out focus-within:outline hover:scale-[1.03]"
>
  <a href={`blogs/${blog.id}`} class="block">
    <header class="flex justify-between items-center">
      <time class='text-gray-200"'>{blog.createdAt}</time>
      <div class="flex flex-wrap items-center justify-center space-x-2">
        <a class="text-xs mr-2" href="https://github.com/your-github-username"> github </a>
        <div class="flex items-center justify-center">
          <a class="text-xs mr-2" href="">
            {blog.authorName}
          </a>
          <div class="w-8 h-8 bg-gray-200 shrink-0 flex justify-center rounded-xl items-start">
            <img src="/images/pic.jpg" class="object-cover w-full h-full rounded-xl" width="600" height="600" />
          </div>
        </div>
      </div>
    </header>
    <div class="-mx-4">
      <img src="/images/bg.jpg" alt="" class="my-4 aspect-[16/5] w-full object-cover" />
    </div>
    <div class="mt-6 grid gap-x-16 gap-y-4 md:grid-cols-2">
      <h3 class="heading-4 md:heading-3">
        <a href="#" class="text-2xl overflow-hidden line-clamp-2">
          {blog.title}
        </a>
      </h3>
      <p class="text-gray-200 overflow-hidden line-clamp-3">{blog.description}</p>
    </div>
  </a>
</article>
