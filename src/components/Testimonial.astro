    padding: 1rem;
  }

  .cards-container {
    column-count: 3; 
    column-gap: 1rem; 
    max-width: 1200px; 
  }

  .card {
    break-inside: avoid; 
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    padding: 16px;
    box-sizing: border-box;
  }

  .header {
    display: flex;
    align-items: center;
  }

  .image {
    width: 50px;
    height: 50px;
