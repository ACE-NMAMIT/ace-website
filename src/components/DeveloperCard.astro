<style>

  .container{
    display: flex;
    margin-left: 4rem;
    
  }
  .scene {
    width: 240px; /* Adjust to match the card width */
    height: 300px; /* Adjust to match the card height */
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 800px;
    margin: 100px auto; /* Add margin to ensure it's not overlapping with the header */
  }

  .card {
    position: relative;
    width: 240px;
    height: 300px;
    color: white;
    cursor: pointer;
    transform-style: preserve-3d;
    transition: transform 1s ease-in-out;

    &:hover {
      transform: rotateY(180deg);
    }

    .card__face {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      transition: 1s ease-in-out;
      -webkit-box-reflect: below 0
        linear-gradient(transparent, transparent, rgba(0, 0, 0, 0.4));

      img {
        width: 240px;
        height: 300px;
        object-fit: cover;
      }
    }

    .card__face--back {
      transform: rotateY(180deg);
    }
  }
</style>

