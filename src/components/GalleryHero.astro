<section id="scene" class="overflow-hidden">
  <div data-depth="0.2" id="layer1" class="layer">
    <img src="/images/sample.png" alt="" class="layer-img" style="top:20%; left:20%;" loading="lazy" />
    <img src="/images/sample.png" alt="" class="layer-img" style="bottom:10%; left:70%;" loading="lazy" />
  </div>

  <div data-depth="0.4" id="layer2" class="layer">
    <div class="flex justify-around items-center m-auto w-full h-full">
      <img src="/images/sample.png" alt="" class="layer-img" style="bottom:10%; left:10%;" loading="lazy" />
      <img src="/images/sample.png" alt="" class="layer-img" style="bottom:60%; right:20%;" loading="lazy" />
    </div>
  </div>
  
  <div data-depth="0.6" id="layer3" class="layer">
    <div class="flex justify-around items-center m-auto w-full h-full">
      <img src="/images/sample.png" alt="" class="layer-img" loading="lazy" />
    </div>
  </div>
</section>

<style>
  section {
    width: 100%;
    height: 100vh;
    position: relative;
   
  }
  
  section > div {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .layer {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .layer-img {
    position: absolute;
    max-width: 100%;
    height: auto;
  }

  /* Layer-specific image sizes */
  #layer1 .layer-img {
    filter: brightness(0.6);
    width: 20vw;
    height: auto;
  }

  #layer2 .layer-img {
    filter: brightness(0.8);
    width: 25vw;
    height: auto;
  }

  #layer3 .layer-img {
    filter: brightness(1);
    width: 30vw;
    height: auto;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    #layer1 .layer-img,
    #layer2 .layer-img,
    #layer3 .layer-img {
      width: 40vw;
    }
  }

  @media (max-width: 480px) {
    #layer1 .layer-img,
    #layer2 .layer-img,
    #layer3 .layer-img {
      width: 50vw;
    }
  }
</style>

<script>
  import Parallax from 'parallax-js';
  document.addEventListener('DOMContentLoaded', () => {
    const scene = document.getElementById('scene') as HTMLDivElement;
    new Parallax(scene);
  });
</script>
