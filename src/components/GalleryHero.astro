<style>

section {
    width: 100%;
    height: max(100vh, 400px);
  }
  section > div {
    width: 100%;
    height: 100%;
  }

  .blur-load {
    background-size: cover;
    background-position: center;
    border-radius: 15px;
  }
  .blur-load > img {
    object-fit: cover;
    object-position: center;
    opacity: 0;
    transform: opacity 200ms ease-in-out;
  }
  .blur-load.loaded > img {
    opacity: 1;
  }
  #layer1 {
    filter: brightness(0.6);
    img {
      height: 200px;
      width: auto;
    }
  }

  #layer2 {
    filter: brightness(0.8);

    img {
      height: 250px;
      width: auto;
    }
  }

  #layer3 {
    filter: brightness(1);

    img {
      height: 300px;
      width: auto;
    }
  }

  .layer {
    position: relative;
  }

  .layer img {
    @apply absolute w-full h-full;
  }



.masonry-grid {
  width: 1400px;
  margin: 20px auto;
  columns: 4;
  column-gap: 20px;
  padding-top: 400px;
}

.masonry-grid .masonry-item {
  width: 100%;
  margin-bottom: 10px;
  break-inside: avoid;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.masonry-item:hover {
  transform: scale(1.05);
}

.masonry-grid .masonry-item img {
  max-width: 100%;
  border-radius: 15px;
}

@media (max-width: 1200px){
  .masonry-grid{
    width: calc(100% - 40px);
    columns: 3;
  }
}
@media (max-width: 768px){
  .masonry-grid{
    columns: 2;
  }
}
@media (max-width: 480px){
  .masonry-grid{
    columns: 1;
  }
}
</style>
<script>
  import Parallax from 'parallax-js';
  const scene = document.getElementById('scene') as HTMLDivElement;
  new Parallax(scene);

  const blurDivs = document.querySelectorAll(".blur-load")
  blurDivs.forEach( div => {
    const img = div.querySelector("img")

    function loaded() {
      div.classList.add("loaded")
    }
    if(img?.complete) {
      loaded()
    }else {
      img?.addEventListener("load",loaded)
    }
  })
</script>