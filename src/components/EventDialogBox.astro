  <button class="btn btn1">Create Team</button>
  <button class="btn btn2">Join Team</button>
</div>

<style>
.buttons {
  padding: 25px 27px;
  width: 100%;
  height: 100%;
  top: 50%;
  background: #0f0c29;
  background: -webkit-linear-gradient(to right, #0f0c29, #302b63, #24243e);
  background: linear-gradient(to right, #0f0c29, #302b63, #24243e);
  border: 2px solid black;
  width: 500px;
  margin-left: 480px;
  display: flex;
  position: relative;
  justify-content: center;
  border-radius: 10px;
}

body {
  margin: auto;
  padding: 0;
}

.btn1 {
  background: transparent;
}

.btn2 {
  background: none;
}

.btn {
  background: white;
  border: 2px solid #000;
  font-family: "montserrat", sans-serif;
  text-transform: uppercase;
  padding: 12px 20px;
  min-width: 200px;
  margin: 10px;
  cursor: pointer;
  transition: color 0.4s linear;
  position: relative;
  box-shadow: 4px 4px;
  border-radius: 20px;
}
.btn:hover {
  color: #fff;
  transition: transform 1s;
  background-color: white;
  transform: translateX(0);
}
.btn::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: -1;
  transition: transform 0.7s;
  transform-origin: 0 0;
  transition-timing-function: cubic-bezier(0.5, 1.6, 0.4, 0.7);
}
.btn1::before {
  transform: scaleX(0);
}
.btn2::before {
  transform: scaleX(0);
}
.btn1:hover::before {
  transform: scaleX(1);
  border-radius: 15px;
}
.btn2:hover::before {
  transform: scaleX(1);
  border-radius: 15px;
}

</style>