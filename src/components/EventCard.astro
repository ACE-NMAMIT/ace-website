<div class="card max-w-[300px] w-[300px] h-[410px] rounded-xl relative bg-[#1b1b1b]">
  <div class="card-image w-full h-[50%] max-h-[50%] overflow-hidden">
    <img 
    class="h-full object-center w-full object-fill"
    src="images/sample.png"
/>
  </div>
   
  <div class="card-price-tag">
    <span class="price-value">Register now</span>
  </div>
 
  <div class="card-info">
    <div class="left-info">
      <span class="product-title truncate text-lg pt-2"
        >Face Painting
      </span>
      <p class="feature-sub-title text-sm font-bold">Type</p>
          <span class="feature-desc">Technical</span>
          <p class=" font-extrabold bg-[#9232a2] rounded-full w-fit text-white px-2 py-1 text-lg">SOLO</p>
          
    </div>
    <div class="right-info">
      <ul class="features-list">
        <li class="list-item text-xs">
          <p class="feature-sub-title pt-1">Date</p>
          <span class="feature-desc">24-10-23</span>
        </li>
        <li class="list-item">
          <p class="feature-sub-title">Venue</p>
          <span class="feature-desc">CSL05, APJ Kalam Block</span>
        </li>
      </ul>
    </div>
  </div>
  <div class="add-to-cart-btn">
    <button class="ml-3">Register</button>
  </div>
</div>

<style>
    /* From Uiverse.io by sofiapetushok */ 
ul {
  list-style: none;
  padding: 0;
}
.card {
  overflow: hidden;
}
.card .card-image {
  position: relative;
  display: block;
  margin: auto;
  color: #c8c8c8;
  filter: drop-shadow(0 0 5px #111111);
}

.card .card-info {
  height: 100%;
  border-radius: 12px 12px 0 0;
  width: 100%;
  color: #fff;
  display: flex;
  background: linear-gradient(#4f4f4f64, transparent);
}
.card .card-info {
  font-size: 0.8rem;
  max-height: 150px;

}

.card .card-info .left-info{
    width: 52%;
}

.card .card-info .right-info{
    width: 48%;
}

.card .card-info .left-info .feature-sub-title{
    font-size: 13px;
    font-weight: bold;
}
.card .card-info .left-info,
.card .card-info .right-info {
    font-size: 12px;
  padding: 16px;
}
.card .card-info .left-info .product-title {
  
  line-height: 1.1;
  letter-spacing: 0.4px;
  font-weight: bold;
  margin-bottom: 18px;
  display: block;
}
.card .card-info p {
  font-size: 10px;
  margin-top: 12px;
  line-height: 1.2;
  letter-spacing: 0.3px;
  font-weight: normal;
}


.card .card-info .right-info {
  margin: 0;
  position: relative;
}
.card .card-info .right-info::before {
  position: absolute;
  content: "";
  width: 2px;
  height: calc(100% - 20px);
  background: #df29ff;
  left: -5px;
}

.card .card-info .right-info ul {
  margin: 0;
  list-style: none;
}
.card .card-info .right-info ul li {
  padding: 0;
  
  margin: 25px 0;
}
.card .card-info .right-info ul li:first-child {
  margin-top: 0;
}
.card .card-info .right-info ul li p.feature-sub-title {
  font-size: 12px;
  margin-bottom: 5px;
  letter-spacing: 0.3px;
  line-height: 1;
  color: #e96dff;
  font-weight: bold;
  text-transform: uppercase;
}

.feature-sub-title{
    font-size: 12px;
  margin-bottom: 5px;
  letter-spacing: 0.3px;
  line-height: 1;
  color: #e96dff;
  font-weight: bold;
  text-transform: uppercase;
}
.card .card-info .right-info ul li .feature-sub-title:first-child {
  margin-top: 0;
}
.add-to-cart-btn {
  
  position: absolute;
  left:35%;
  bottom: 12px;
  margin-top: 20px;
    width: 100%;  
}
.add-to-cart-btn button {
  border: none;
  font-size: 10px;
  background: linear-gradient(
    45deg,
    transparent,
    #f532f1 40%,
    #f532f1,
    #a141fb 60%,
    transparent
  );
  padding: 6px 10px;
  color: #fff;
  font-weight: bold;
  background-size: 200%;
  background-position: 0% 0%;
  text-transform: uppercase;
  border-radius: 30px;
  transition: 0.4s ease-in-out;
}
.card .card-price-tag {
  position: absolute;
  right: 12px;
  top: 0;
  color: #fff;
  font-size: 0.6rem;
  font-weight: 600;
  padding: 3px 10px;
  border-radius: 0 0 5px 5px;
  background: linear-gradient(#df29ff, #dc0ba5);
}

.card::before {
  position: absolute;
  content: "";
  height: 90px;
  width: 90px;
  border-radius: 50%;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgb(245, 46, 255);
  filter: blur(25px);
  box-shadow: 0 0 70px 0 #f51cf1;
}

.card .add-to-cart-btn button:hover {
  background-position: 100% 100%;
}

</style>
