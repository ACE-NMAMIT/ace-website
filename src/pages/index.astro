---
import Gallery from '@components/landing/Gallery.astro';
import Layout from '../layouts/Layout.astro';
import Events from '@components/landing/Events.astro';
import Testimonial from '@components/Testimonial.astro';

---

<Layout title="ACE">
  <main>
    <!-- hero -->
    <section class="hero content-container flex flex-col items-center justify-between py-6 md:py-16">
      <div></div>
      <div class="text-center space-y-4">
        <h3 class="title-glow font-dirtyline lowercase text-6xl">Association of computer Engineers</h3>
        <p class="m-auto max-w-80 text-sm">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. i animi dicta. Vitae id ullam minus, nesciunt alias
          tempore soluta.
        </p>
      </div>

      <div class="w-full flex items-center justify-between">
        <a href="/blogs" class="animated-btn"><span>Blogs</span></a>
        <a href="/contact" class="animated-btn"><span>Get in touch</span></a>
      </div>
    </section>

    <!-- video -->
    <section class="content-container grid place-content-center py-20 h-fit">
      <video class="m-auto w-full h-fit rounded-3xl" muted autoplay loop>
        <source src="/intro-video.mp4" type="video/mp4" />
      </video>
    </section>

    <!-- gallery preview -->
    <Gallery />

    <!-- events -->
    <Events />
    <Testimonial/>
  </main>
</Layout>

<style>
  /* Hero buttons with continuous border animation */
  .animated-btn {
    position: relative;
    display: inline-block;
  }

  .animated-btn span {
    @apply border-2 border-blue-500 p-4 px-8 w-48 text-center;
    border-radius: 9999px;
    position: relative;
    z-index: 1;
    display: block;
    /* rgb(59 130 246) */
  }

  /* Circular border animation */
  @keyframes rotate-border {
    0% {
      stroke-dashoffset: 0;
    }
    100% {
      stroke-dashoffset: 400;
    }
  }

  .animated-btn::before {
    content: "";
    position: absolute;
    top: -4px; 
    left: -4px;
    right: -4px;
    bottom: -4px;
    border-radius: 9999px;
    border: 2px solid transparent;
    
    background-size: 200%;
    animation: rotate-border 4s linear infinite;
    z-index: 0;
    padding: 2px;
  }

  /* Glow effect on hover */
  .animated-btn:hover::before {
    box-shadow: 0 0 10px rgba(0, 180, 216, 0.8), 0 0 20px rgba(0, 180, 216, 0.5);
  }

  .animated-btn span:hover {
    color: #00b4d8;
  }

  /* Title glow animation */
  .title-glow {
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }

  .title-glow::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(0, 180, 216, 0.4), transparent);
    transform: translate(-50%, -50%) scale(0.8);
    transition: transform 0.5s ease, opacity 0.5s ease;
    border-radius: 50%;
    z-index: -1;
    opacity: 0;
  }

  

  
</style>

<style is:global>
  section {
    width: 100%;
    height: 100vh;
    min-height: 400px;
  }
</style>
