---
import Gallery from '@components/landing/Gallery.astro';
import Layout from '../layouts/Layout.astro';
import Events from '@components/landing/Events.astro';
import Testimonial from '@components/landing/Testimonials.astro';
import Benifits from '@components/landing/Benifits.astro';
---

<Layout title="ACE">
  <main>
    <!-- hero -->
    <section class="hero content-container flex flex-col items-center justify-between py-16">
      <div class="max-[240px]:h-20" ></div>
      <div class="text-center space-y-4">
        <h3 class="title-glow font-dirtyline text-5xl md:text-7xl">
          Association of Computer Engineers
        </h3>
        <p class="m-auto max-w-md md:max-w-80 text-xs md:text-sm">
          Hub of innovation in Computer Science & Engineering, where we fuel your passion for learning, boost your career, and work together to uplift the community.
        </p>
      </div>

      <div class="w-full flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0 md:space-x-4">
        <a href="/blogs" class="animated-btn"><span>Blogs</span></a>
        <a href="#footer" class="animated-btn"><span>Get in touch</span></a>
      </div>
    </section>

    <!-- gallery preview -->
    <Gallery />

    <Benifits />

    <!-- events -->
    <Events />
    <h3 class="title-glow font-dirtyline lowercase text-3xl md:text-6xl text-center">
      Words from the Wise
    </h3>
    <br>
    <br>
    <Testimonial />
  </main>
</Layout>

<style>
  #fluid {
    position: fixed;
    top: 0;
    left: 0;
    width: 100dvw;
    height: 100dvh;
    z-index: -10;
  }
  /* Hero buttons with continuous border animation */
  .animated-btn {
    position: relative;
    display: inline-block;
  }

  .animated-btn span {
    @apply border-2 border-blue-500 p-2 md:p-4 px-4 md:px-8 w-40 md:w-48 text-center;
    border-radius: 9999px;
    position: relative;
    z-index: 1;
    display: block;
    /* rgb(59 130 246) */
  }

  /* Circular border animation */
  @keyframes rotate-border {
    0% {
      stroke-dashoffset: 0;
    }
    100% {
      stroke-dashoffset: 400;
    }
  }

  .animated-btn::before {
    content: '';
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border-radius: 9999px;
    border: 2px solid transparent;

    background-size: 200%;
    animation: rotate-border 4s linear infinite;
    z-index: 0;
    padding: 2px;
  }

  /* Glow effect on hover */
  .animated-btn:hover::before {
    box-shadow:
      0 0 10px rgba(0, 180, 216, 0.8),
      0 0 20px rgba(0, 180, 216, 0.5);
  }

  .animated-btn span:hover {
    color: #00b4d8;
  }

  /* Title glow animation */
  .title-glow {
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }

  .title-glow::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(0, 180, 216, 0.4), transparent);
    transform: translate(-50%, -50%) scale(0.8);
    transition:
      transform 0.5s ease,
      opacity 0.5s ease;
    border-radius: 50%;
    z-index: -1;
    opacity: 0;
  }
</style>

<style is:global>
  section {
    width: 100%;
    height: auto;
    min-height: 400px;
    padding: 1rem;
  }

  @media (min-width: 768px) {
    section {
      height: 100vh;
    }
  }
</style>
