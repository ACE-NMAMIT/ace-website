            <DeveloperCard name="Varshith" description="All Hail Varshith" linkedinLink="#" githubLink="#" />
          </div>
        </div>

        <div class="container">
          <div class="fade-up">
            <DeveloperCard name="Varshith" description="All Hail Varshith" linkedinLink="#" githubLink="#" />
          </div>
          <div class="fade-up">
            <DeveloperCard name="Len" description="All Hail Varshith" linkedinLink="#" githubLink="#" />
          </div>
          <div class="fade-up">
            <DeveloperCard name="Karthik" description="All Hail Varshith" linkedinLink="#" githubLink="#" />
          </div>
        </div>
        <div class="container">
          <div class="fade-up">
            <DeveloperCard name="Varshith" description="All Hail Varshith" linkedinLink="#" githubLink="#" />
          </div>
          <div class="fade-up">
